<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/lnInfoCardTop"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_top" />

    <LinearLayout
        android:id="@+id/lnInfoCard"
        android:layout_below="@id/lnInfoCardTop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_infocard">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textColor="@color/text_welcome"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <View
        android:layout_below="@id/lnInfoCard"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_bottom" />


</RelativeLayout>